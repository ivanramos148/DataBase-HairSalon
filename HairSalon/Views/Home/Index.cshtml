@{
  Layout = "_Layout";
}

<!--
Stylist Model being sent to this page
-->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="w3-container w3-center">
      <div class="w3-container" "w3-center">
        @if (@Model.Count == 0)
        {
          <div class=jumbotron>
            <h3>No Stylists to show</h3>
            <h4>Click Down Below To Add</h4>
          </div>
          <p><a href="/stylists/new">Add Stylist</a></p>
        }

        @if (@Model.Count > 0)
        {
          <div class="w3-container">
          <div class=jumbotron>
            <h2>Stylists</h2>
          </div>

            @foreach(var stylist in Model)
            {
              <li><a href="/stylists/@stylist.GetId()/profile">@stylist.GetStylistName()</a></li>
            }
          </div>
          <p><a href="/stylists/new">Add Stylist</a></p>
          <p><a href="/clients">See Clients</a></p>
        }

      </div>
    </div>
  </body>
</html>
